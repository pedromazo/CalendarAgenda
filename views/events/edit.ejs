<%- layout('layouts/boilerplate') %> 

<h1 class="text-center">Editar Evento</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/events/<%=evento._id%>?_method=PUT" method="POST" class="mb-5 validated-form" novalidate> 
            <!-- IN ORDER TO PARSE MULTIPART/FORM-DATA WE NEED A MIDDLEWARE, WE WILL INSTALL AND USE MULTER -->
            <div class="mb-3">
                <label class="form-label" for="title">Nome do Evento</label>
                <input class="form-control" type="text" id="title" name="event[eventName]" value="<%=evento.eventName%>" required>
                <div class="valid-feedback">Show!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="initDate">Início</label>
                <input class="form-control" type="datetime-local" id="initDate" name="event[initDate]" value="<%=evento.initDate%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="endDate">Fim</label>
                <input class="form-control" type="datetime-local" id="endDate" value="<%=evento.endDate%>" name="event[endDate]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="eventDescrip">Descrição</label>
                <textarea class="form-control" type="text" id="eventDescrip" name="event[eventDescrip]" required><%=evento.eventDescrip%></textarea>
            </div class="mb-3">
            <button class="btn btn-primary mb-2">Salvar alterações</button>
            <br>
            </form>
            <div class="mb-5">
            <a class="mb-5"href="/">Voltar</a>
        </div> 
        </div>
</div>